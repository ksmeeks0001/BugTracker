@{

    ViewBag.Title = "Welcome";
}

<div class="jumbotron">
    <h1>Bug Tracker Software</h1>
    @Html.ActionLink("Register Now!", "OrganizationRegister", "Account")
</div>

<div class="row">
    <div class="col-md-4">
        <h2>What we do</h2>
        <p>
            Manage your bugs and issues effectively for your next software project. Assign issues to a Team Member and track progress
            through it's resolution.
        </p>
    </div>
    <div class="col-md-4">
        <h2>Analytics</h2>
        <p> Use analytics to track your team's performance.  </p>
        <div>
            <canvas id="resolutionGraph"></canvas>
        </div>
    </div>
    <div class="col-md-4">
        <h2>Author</h2>
        <p>
            Kevin Smeeks is a graduating senior at Kentucky State University. He is passionate about
            learning new skills in software development.
        </p>
        <p><a class="btn btn-default" href="http://kevin-smeeks.com">More about Kevin &raquo;</a></p>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js" integrity="sha256-R4pqcOYV8lt7snxMQO/HSbVCFRPMdrhAFMH+vr9giYI=" crossorigin="anonymous"></script>
<script>
    var resolutionGraph = document.getElementById('resolutionGraph').getContext('2d');
        var myLineChart = new Chart(resolutionGraph, {
            type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun',
                             'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec' ],
                    datasets: [{
                        label: 'Average Days to Resolution',
                        data: [4,5,4,3,2,],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(255, 159, 64, 0.2)',
                            'rgba(153, 102, 255, 0.2)',

                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(255, 159, 64, 1)',
                            'rgba(153, 102, 255, 1)',
                        ],
                        borderWidth: 1
                    }]
                },
            options: {}
        });
</script>